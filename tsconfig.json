{
    "compilerOptions": {
        "target": "es2018",
        "experimentalDecorators": true,
        "module": "esNext",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "allowJs": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "ts-out",
        "resolveJsonModule": true,
        "typeRoots": ["./lib/ThirdParty/**/*.d.ts"],
        "types": ["terriajs-cesium", "@types/gtag.js"]
    },
    "include": [
        "./lib/**/*",
        "./test/**/*",
        "./buildprocess/generateDocs.ts",
        "./buildprocess/**/*",
    ]
}
